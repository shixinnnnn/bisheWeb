<mvc:View
	controllerName="sap.ui.demo.toolpageapp.controller.submitterJurisdiction"
	xmlns="sap.uxap"
	xmlns:f="sap.ui.layout.form"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:commons="sap.suite.ui.commons">
	<m:Page
		showHeader="{device>/system/phone}"
		showNavButton="{device>/system/phone}"
		navButtonPress=".onNavButtonPress">
		<m:landmarkInfo>
			<m:PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>SystemSettings_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>SystemSettings_contentLabel}"/>
		</m:landmarkInfo>
		<ObjectPageLayout id="objectPageLayout">
			<headerTitle>
				<ObjectPageHeader
					objectTitle="{i18n>sideContentUsagesideSubmitterJurisdiction}"
					objectSubtitle="{i18n>systemSettingsDescriptionTitle}"/>
			</headerTitle>
			<headerContent>
				<m:MessageStrip
					text="{
						parts: [
							'i18n>systemSettingsLastLoginTitle',
							'view>/currentUser',
							'view>/lastLogin'
						],
						formatter: '.formatter.formatMessage'
					}"
					type="Information"
					showIcon="true">
				</m:MessageStrip>
			</headerContent>
			<sections>
				<ObjectPageSection>
				<subSections>
					<ObjectPageSubSection
						id="shopOwnerId">
						<blocks>
							<ObjectPageLazyLoader
								id="shopOwnerLazyLoader">
								<f:SimpleForm
									columnsL="2"
									columnsM="2"
									editable="true"
									layout="ResponsiveGridLayout">
									<f:content>
                                            <m:VBox >
                                                <m:SearchField width="50%" class="sapUiSmallMargin" liveChange="searchChange" search="freesearch"/>
                                                <m:Table 
                                                    id="table"
                                                    busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                                                    growing="true"
                                                    growingScrollToLoad="true"
                                                    noDataText="{worklistView>/tableNoDataText}"
                                                    updateFinished=".onUpdateFinished"
                                                    width="auto"
                                                    items="{submitter>/}">
                                                    <m:columns>
                                                        <m:Column id="hospitalColumn">
                                                            <m:Text
                                                                id="hospital"
                                                                text="医院"/>
                                                        </m:Column>	
                                                        <m:Column id="submitterIDColumn">
                                                            <m:Text
                                                                id="submitterID"
                                                                text="送检员ID"/>
                                                        </m:Column>
                                                        <m:Column id="submitterNameColumn">
                                                            <m:Text
                                                                id="submitterName"
                                                                text="送检员姓名"/>
                                                        </m:Column>
                                                        <m:Column id="emailColumn">
                                                            <m:Text
                                                                id="email"
                                                                text="注册邮箱"/>
                                                        </m:Column>	
                                                        <m:Column id="passwordColumn">
                                                            <m:Text
                                                                id="password"
                                                                text="登陆密码"/>
                                                        </m:Column>
                                                        <m:Column id="managerColumn">
                                                            <m:Text
                                                                id="manager"
                                                                text="团队管理权限"/>
                                                        </m:Column>								
                                                    </m:columns>
                                                <m:items>
                                                    <m:ColumnListItem
                                                        type="Navigation"
                                                        press=".onPress">
                                                        <m:customData>
                                                                <core:CustomData key="{submitter>hospitalID}" value="{submitter>hospitalID}"/>
                                                                <core:CustomData key="{submitter>submitterID}" value="{submitter>submitterID}"/>
                                                        </m:customData>
                                                        <m:cells>
                                                            <m:ObjectIdentifier
                                                                text="{submitter>hospital}"/>
                                                                <m:ObjectIdentifier
                                                                text="{submitter>submitterID}"/>
                                                            <m:ObjectIdentifier
                                                                text="{submitter>name}"/> 
                                                            <m:ObjectIdentifier
                                                                text="{submitter>email}"/> 
                                                            <m:ObjectIdentifier
                                                                text="{submitter>password}"/> 
                                                            <m:SegmentedButton selectedKey="{submitter>manager}" class="sapUiSmallMarginBottom" selectionChange="onChangeSelect">
                                                                <m:items>
                                                                    <m:SegmentedButtonItem icon="sap-icon://accept" key="1"/>
                                                                    <m:SegmentedButtonItem icon="sap-icon://decline" key="0"/>
                                                                </m:items>
                                                            </m:SegmentedButton>                                                           
                                                        </m:cells>
                                                    </m:ColumnListItem>
                                                </m:items>
                                                </m:Table>
                                            </m:VBox>							
									</f:content>
								</f:SimpleForm>
							</ObjectPageLazyLoader>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
				</ObjectPageSection>
			</sections>
		</ObjectPageLayout>
	</m:Page>
</mvc:View>